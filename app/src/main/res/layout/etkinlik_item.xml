<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgEtkinlik"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Etkinlik görseli" />

        <TextView
            android:id="@+id/txtBaslik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Etkinlik Başlığı"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <TextView
            android:id="@+id/txtAciklama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Etkinlik açıklaması burada yer alır."
            android:textSize="14sp"
            android:textColor="#555"
            android:paddingTop="4dp"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/etkinliklerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Etkinlikleri Görüntüle"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
