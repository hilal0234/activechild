<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <!-- Başlık -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kayıt Ol"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#3D5AFE"
        android:layout_marginBottom="40dp"/>

    <!-- E-mail EditText -->
    <EditText
        android:id="@+id/etİsim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="İsim"
        android:inputType="text"
        android:padding="16dp"
        android:backgroundTint="#3D5AFE"
        android:textColor="#000000"
        android:textColorHint="#A5A5A5"
        android:layout_marginBottom="20dp"/>

    <!-- Şifre EditText -->
    <EditText
        android:id="@+id/etSoyisim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3D5AFE"
        android:hint="Soyisim"
        android:inputType="text"
        android:padding="16dp"
        android:textColor="#000000"
        android:textColorHint="#A5A5A5" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#3D5AFE"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="#000000"
        android:textColorHint="#A5A5A5" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:padding="16dp"
        android:backgroundTint="#3D5AFE"
        android:textColor="#000000"
        android:textColorHint="#A5A5A5"
        android:layout_marginBottom="30dp"/>

    <!-- Şartlar Checkbox -->
    <CheckBox
        android:id="@+id/cbTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesap oluşturma şartlarını okudum, kabul ediyorum"
        android:textColor="#000000"
        android:layout_marginBottom="30dp"/>

    <!-- Kayıt Ol Butonu -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hesap Oluştur"
        android:textColor="#FFFFFF"
        android:backgroundTint="#3D5AFE"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

    <!-- "Hesabınız var mı?" Bağlantısı -->
    <TextView
        android:id="@+id/tvLoginRedirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hesabınız var mı?"
        android:textColor="#3D5AFE"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"/>

</LinearLayout>
